---
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Breadcrumb from "@/components/Breadcrumb.astro";
import Layout from "@/layouts/Layout.astro";
import { SITE } from "@/config";
import type { Lang } from "@/i18n/ui";

// Hardcoded to Chinese for root path
const lang: Lang = "zh";

// Chinese content
const c = {
  title: "关于",
  intro: "这是一个基于 AstroPaper 主题构建的博客。",
  description: "",
  features: "",
  featureList: [
  ],
  support: "",
  supportText: "",
};
---

<Layout title={`${c.title} | ${SITE.title}`}>
  <Header lang={lang} />
  <Breadcrumb lang={lang} />
  <main id="main-content" class="app-layout">
    <section id="about" class="app-prose mb-28 max-w-app prose-img:border-0">
      <h1 class="text-2xl tracking-wider sm:text-3xl">{c.title}</h1>
      
      <p>{c.intro}</p>
      <p>{c.description}</p>
      
      <h2>{c.features}</h2>
      <ul>
        {c.featureList.map(feature => (
          <li set:html={feature.replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')} />
        ))}
      </ul>
      
      <h2>{c.support}</h2>
      <p>
        {c.supportText}
        <a href="https://github.com/t0saki/AstroPages-Bilingual" target="_blank" rel="noopener noreferrer">
          GitHub
        </a>
      </p>
    </section>
  </main>
  <Footer lang={lang} />
</Layout>
